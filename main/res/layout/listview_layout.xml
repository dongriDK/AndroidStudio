<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dip"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/listView_appimage"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        <!-- this id should be the @+id/rarity -->

        <TextView
            android:id="@+id/listView_pername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="24dp" />

        <!-- this id should be the @+id/name -->
        <TextView
            android:id="@+id/listView_appdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listView_pername"
            android:textColor="#666666"
            android:text="date"
            android:textSize="16dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorAccent"
        android:focusable="false"
        app:srcCompat="@drawable/baseline_menu_black_18dp" />
</LinearLayout>